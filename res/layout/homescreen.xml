<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Homescreen" >

   
    <ImageButton
        android:id="@+id/IB3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/about"
        android:src="@drawable/about" />

    <TextView
        android:id="@+id/TVhome3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/IB3"
        android:layout_centerHorizontal="true"
        android:text="About" />

    <TextView
        android:id="@+id/TVhome1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/IB1"
        android:layout_below="@+id/IB2"
        android:text="Convertor" />

    <TextView
        android:id="@+id/TVhome2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/IB3"
        android:layout_alignLeft="@+id/IB2"
        android:layout_marginBottom="101dp"
        android:text="Settings" />

    <ImageButton
        android:id="@+id/IB2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TVhome2"
        android:layout_marginLeft="90dp"
        android:layout_toRightOf="@+id/IB3"
        android:background="@drawable/settings"
        android:src="@drawable/settings" />

    <ImageButton
        android:id="@+id/IB1"
        style="@style/AppBaseTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TVhome1"
        android:layout_marginRight="83dp"
        android:layout_toLeftOf="@+id/IB3"
        android:background="@drawable/convert"
        android:src="@drawable/convert" />

</RelativeLayout>